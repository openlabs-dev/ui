{
  "name": "@openlite/ui",
  "version": "0.5.5",
  "packageManager": "pnpm@9.7.0",
  "description": "A design system built with TailwindCSS and Radix UI.",
  "author": "openlabs",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.mjs",
      "require": "./dist/tailwind.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "tsup --dts --watch",
    "docs": "pnpm -r --filter docs dev",
    "docs:build": "pnpm -r --filter docs build",
    "playground": "pnpm -r --filter playground dev",
    "playground:build": "pnpm -r --filter playground build",
    "clean": "pnpx rimraf dist pnpm-lock.yaml node_modules",
    "lint": "eslint . --fix",
    "build": "tsup --dts",
    "prepare": "npx simple-git-hooks && pnpm build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3.4.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "1.1.2",
    "@radix-ui/react-aspect-ratio": "1.0.3",
    "@radix-ui/react-avatar": "1.0.4",
    "@radix-ui/react-checkbox": "1.0.4",
    "@radix-ui/react-dialog": "1.0.5",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-progress": "1.0.3",
    "@radix-ui/react-scroll-area": "1.0.5",
    "@radix-ui/react-select": "2.0.0",
    "@radix-ui/react-separator": "1.0.3",
    "@radix-ui/react-slider": "1.1.2",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tabs": "1.0.4",
    "@radix-ui/react-tooltip": "1.0.7",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0",
    "color": "4.2.3",
    "color2k": "2.0.3",
    "deepmerge": "4.3.1",
    "embla-carousel-react": "8.0.0",
    "flat": "5.0.2",
    "lodash.foreach": "4.5.0",
    "lodash.get": "4.4.2",
    "lodash.kebabcase": "4.1.1",
    "lodash.mapkeys": "4.6.0",
    "lodash.omit": "4.5.0",
    "tailwind-merge": "2.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.19.1",
    "@types/color": "3.0.6",
    "@types/flat": "5.0.5",
    "@types/lodash.foreach": "4.5.9",
    "@types/lodash.get": "4.4.9",
    "@types/lodash.kebabcase": "4.1.9",
    "@types/lodash.mapkeys": "4.6.9",
    "@types/lodash.omit": "4.5.9",
    "@types/node": "20.11.28",
    "@types/react": "18.2.69",
    "@types/react-dom": "18.2.22",
    "eslint": "8.57.0",
    "eslint-plugin-format": "0.1.0",
    "lint-staged": "15.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "simple-git-hooks": "2.11.1",
    "tailwindcss": "3.4.1",
    "tsup": "8.0.2",
    "typescript": "5.4.2"
  },
  "tsup": {
    "entry": [
      "./src/index.ts",
      "./src/tailwind.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "clean": true,
    "target": "es2019"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
